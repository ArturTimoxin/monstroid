@import url('https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i');
@import url('https://fonts.googleapis.com/css?family=Indie+Flower');    
@import './components/GetIt/style.styl'

*
    box-sizing: border-box

body
    margin 0
    position: relative
    #root
        .App
            .wrapper
                .block-1
                    height: 560px
                    background-image: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(https://livedemo00.template-help.com/wt_62267_v7/landing/images/home-slider-02.jpg)
                    background-repeat: no-repeat;
                    background-size: cover;
                    display: flex
                    justify-content: center
                    align-items: center
                    header
                        position: fixed
                        z-index: 1
                        left: 0;
                        top: 0;
                        bottom: 0;
                        right: 0;
                        width 100%
                        height 0
                        .header-inner
                            background-color: transparent //#333333
                            padding: 35px 15px
                            display: flex
                            align-items: center
                            justify-content: space-between
                            transition: all .3s
                            &.color
                                background-color: #333333
                                padding: 15px 15px
                            .logo
                                max-width 160px
                                height auto
                                cursor: pointer
                            .menu
                                list-style: none
                                display flex
                                @media screen and (max-width: 900px)
                                    display: none
                                li
                                    margin-right: 10px
                                    color: white
                                    font-family: 'Roboto'
                                    cursor pointer
                                    font-size: 15px
                                    transition: all 0.5s
                                    &:hover
                                        color: #2ecba8
                                    &:last-child
                                        margin-right: 0
                        .buy-template-button
                            background-color: transparent
                            border:1px solid white
                            color: white
                            padding: 15px 35px
                            font-size: 18px
                            font-family: 'Roboto'
                            font-weight: 100i
                            cursor pointer
                            outline: none;
                            transition: all 0.5s
                            &:hover
                                background-color: white
                                color: black
                    .wrapper-info
                        display: flex
                        flex-direction: column
                        align-items: center
                        h1
                            text-align: center;
                            font-size: 44px
                            color: #ffffff
                            font-family: 'Roboto'
                            margin: 0
                        h3
                            text-align: center;
                            font-size: 36px
                            color: #ffffff
                            font-family: 'Roboto'
                        .demo
                            background-color: transparent
                            border:1px solid white
                            color: white
                            padding: 15px 35px
                            font-size: 18px
                            font-family: 'Roboto'
                            cursor pointer
                            outline: none;
                            transition: all 0.5s
                            &:hover
                                background-color: white
                                color: black
                .block-3
                    padding: 70px 15px
                    margin: 0 auto;
                    background-color: #f8f8f8
                    h2
                        margin 0
                        text-align: center
                        font-size: 55px; 
                        font-family: 'Roboto'
                        font-weight: 300       
                        .change-font
                            font-size: 64px
                            font-family: 'Indie Flower', cursive;
                            display: inline-block
                            color: #119df7
                    .advantages
                        display: flex
                        flex-wrap: wrap
                        justify-content: center
                        .advantage
                            padding 0 60px
                            text-align: center
                            i 
                                color: #119df7
                                font-size: 100px
                            h3
                                margin 0
                                font-family: 'Roboto'
                                font-size: 40px;
                                font-weight: 700; 
                                text-align: center   
                            p
                                margin-top: 10px;
                                text-align: center
                                font-family: 'Roboto'
                                font-size: 20px
                                font-weight: 200px
                .block-4
                    padding: 70px 5px 20px 5px
                    margin: 0 auto;
                    h1
                        margin 0
                        text-align: center
                        font-size: 55px; 
                        font-family: 'Roboto'
                        font-weight: 300
                    p
                        margin-top: 25px
                        text-align: center
                        font-size: 20px; 
                        font-family: 'Roboto'
                        font-weight: 100
                        color: #888888
                    .wrapper-templates
                        margin: 100px 0;
                        width: 100%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        flex-wrap: wrap;
                        .template
                            max-width: 300px;
                            height: auto;
                            margin: 15px;
                            position: relative;
                            transition: opacity 0.4s;
                            cursor: pointer
                            box-shadow: 20px 20px 40px 0 rgba(0,0,0,0.12);
                            .templateImage
                                opacity: 1
                                width: 100%
                                height 100%
                            .templateText
                                position: absolute;
                                width: 100%
                                height 100%
                                top: 0;
                                left: 0;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                flex-direction: column;
                                padding-left: 8px;
                                padding-right: 8px;
                                background-color: #fff;
                                color: #888;
                                opacity: 0;
                                transition: all .8s ease-in-out;
                                .templateTitle
                                    font-family: 'Roboto'
                                    font-weight: bold
                        .template:hover
                            .templateImage
                                opacity: 0
                            .templateText
                                opacity 1
                .block-5
                    padding: 100px 15px
                    margin: 0 auto;
                    display: flex
                    flex-direction: column
                    align-items: center
                    background-color: #f8f8f8
                    h1
                        margin 0
                        font-size: 55px; 
                        font-family: 'Roboto'
                        text-align: center;
                        font-weight: 300
                    p
                        margin-top: 25px
                        font-size: 24px; 
                        font-family: 'Roboto'
                        text-align: center;
                        font-weight: 100
                        color: #888888
                    .wrapper-pre-made-layouts
                        margin: 50px 0
                        width: 100%
                        display: flex
                        align-items: center
                        justify-content: space-between
                        flex-wrap: wrap
                        @media screen and (max-width: 950px)
                            justify-content: center
                        .pre-made-layout
                            cursor: pointer
                            img
                                max-width: 230px
                                height auto
                                margin: 30px 35px
                                transition: all 0.5s
                                &:hover
                                    transform: scale(1.05);
                                    box-shadow: 10px 10px 74px -15px rgba(0,0,0,0.3);
                            div
                                text-align: center
                                font-family: 'Roboto'
                                font-weight: 300
                                font-size: 19px 
                    .view-more
                        background-color: #2dd1ac
                        border:1px solid #2dd1ac
                        border-radius: 3px
                        color: white
                        font-size: 18px
                        font-family: 'Roboto'
                        cursor pointer
                        outline: none;
                        transition: all 0.5s
                        padding: 15px 30px
                        transition all 0.5s
                        &:hover
                            background-color: #24aa8c
                .block-7
                    padding: 100px 15px
                    margin: 0 auto;
                    h1
                        text-align: center
                        margin 0
                        font-size: 55px; 
                        font-family:'Roboto'
                        font-weight: 300
                    .wrapper-monstroid-advantages
                        display: flex
                        justify-content: space-around
                        @media screen and (max-width 900px)
                            flex-wrap: wrap
                        .monstroid-advantage
                            margin-top: 50px
                            display: flex
                            flex-direction: column
                            align-items: center
                            justify-content: space-between;
                            padding: 0 15px
                            img
                                max-width: 100px
                                height auto
                            h3
                                text-align: center
                                font-family: 'Roboto'
                                font-size: 24px; 
                                font-weight: 300
                            p
                                font-family: 'Roboto'
                                text-align: center
                                font-size: 20px; 
                                font-weight: 100
                                color: #888888
                .block-8
                    padding: 55px 15px
                    background-color: #2ed3ae
                    .wrapper-optimized
                        display: flex
                        justify-content: space-between
                        img
                            max-width: 550px;
                            max-height: 450px;
                            @media screen and (max-width 900px)
                                display: none
                        .wrapper-infomation
                            h1
                                color: white
                                font-family: 'Roboto'
                                font-weight: 300
                                font-size: 60px
                                @media screen and (max-width 570px)
                                    text-align: center
                                    font-size: 32px
                            .wrapper-info-wrapper
                                display: flex
                                flex-wrap: wrap;
                                @media screen and (max-width 570px)
                                    margin-top: 60px
                                .info
                                    display: flex
                                    i
                                        font-size: 40px
                                        color: white
                                    .wrapper-info-text
                                        margin-left: 15px
                                        h2
                                            margin 0px
                                            color white
                                            font-family: 'Roboto'
                                            font-weight: 300i
                                            font-size: 25px
                                        p
                                            color white
                                            font-family: 'Roboto'
                                            font-weight: 100
                                            font-size: 20px
                .block-9
                    padding 150px 50px
                    .wrapper-info-text
                        display: flex
                        align-items: center
                        @media screen and (max-width 900px)
                            flex-wrap: wrap
                        .info-text
                            .info
                                display: flex
                                @media screen and (max-width 900px)
                                    flex-direction: row-reverse;
                                .wrap-text
                                    margin-right: 15px
                                    h3
                                        font-family: 'Roboto'
                                        font-weight: 300
                                        font-size: 25px
                                        margin 0
                                        text-align: right
                                        @media screen and (max-width 900px)
                                            text-align: center
                                    p
                                        font-family: 'Roboto'
                                        font-size: 20px
                                        font-weight: 100
                                        text-align: right
                                        color: #888888
                                        @media screen and (max-width 900px)
                                            text-align: center
                                i
                                    color #119df7
                                    font-size: 35px
                        img
                            max-width: 500px
                            height 250px
                            @media screen and (max-width 900px)
                                display: none
                        .info-text-2
                            .info-2
                                display: flex
                                .wrap-text
                                    margin-right: 15px
                                    h3
                                        font-family: 'Roboto'
                                        font-weight: 300
                                        font-size: 25px
                                        margin 0
                                        text-align: left
                                        @media screen and (max-width 900px)
                                            text-align: center
                                    p
                                        font-family: 'Roboto'
                                        font-size: 20px
                                        font-weight: 100
                                        text-align: left
                                        color: #888888
                                        @media screen and (max-width 900px)
                                            text-align: center
                                i
                                    color #119df7
                                    font-size: 35px
                .block-11
                    padding: 80px 60px
                    background-color: #f8f8f8
                    display: flex
                    img
                        @media screen and (max-width: 900px)
                            display: none
                    .wrapper-text-buy
                        margin-top: 100px
                        margin-left: 50px
                        @media screen and (max-width 900px)
                            margin: 0
                        h3
                            font-family: 'Roboto'

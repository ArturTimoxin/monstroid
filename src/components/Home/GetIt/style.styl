.wrapper-get-it
    background-color: #2dd1ac
    padding: 60px 80px 60px 20px
    display: flex
    flex-wrap: wrap
    align-items: center;
    justify-content: space-between
    @media screen and (max-width 1100px)
        flex-direction: column
        justify-content: center
        padding 60px 20px
    .wrapper-text
        div
            color white
            font-family: 'Roboto'
            font-size: 35px
            @media screen and (max-width 1000px)
                font-size 28px
                margin-bottom: 15px
                text-align: center
        p
            color white
            font-family: 'Roboto'
            font-size: 20px
            @media screen and (max-width 1000px)
                display: none
    .get-it
        background-color: white
        border:1px solid white
        border-radius: 3px
        color: #2dd1ac
        font-size: 18px
        font-family: 'Roboto'
        cursor pointer
        outline: none;
        transition: all 0.5s
        padding: 10px 30px
        height: 58px;
        &:hover
            background-color: transparent
            color: white
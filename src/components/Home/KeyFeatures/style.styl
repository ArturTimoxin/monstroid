.keyFeatures
    padding 150px 25px
    h1
        margin: 0
        font-family: 'Roboto'
        font-size: 45px
        font-weight: 300
        text-align: center
    .wrapper-key-features
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        @media screen and (max-width 900px)
            justify-content: center;
        .feature
            margin-top: 60px;
            width: 294px;
            padding: 0 15px;
            display: flex;
            align-items: center;
            img
                max-width: 64px;
                max-height: 64px;
            p
                font-family: 'Roboto'
                font-size: 25px
                font-weight: 300
                margin-left: 15px
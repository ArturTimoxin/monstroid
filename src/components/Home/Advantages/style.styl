.advantages
    padding: 110px 15px
    margin: 0 auto;
    h1
        text-align: center
        margin 0
        font-size: 55px; 
        font-family:'Roboto'
        font-weight: 300
    .wrapper-monstroid-advantages
        display: flex
        justify-content: space-around
        @media screen and (max-width 900px)
            flex-wrap: wrap
        .monstroid-advantage
            margin-top: 50px
            display: flex
            flex-direction: column
            align-items: center
            justify-content: space-between;
            padding: 0 15px
            img
                max-width: 100px
                height auto
            h3
                text-align: center
                font-family: 'Roboto'
                font-size: 24px; 
                font-weight: 300
            p
                font-family: 'Roboto'
                text-align: center
                font-size: 20px; 
                font-weight: 100
                color: #888888
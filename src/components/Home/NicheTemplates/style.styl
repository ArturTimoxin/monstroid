.nicheTemplates
    padding: 70px 5px 20px 5px
    margin: 0 auto;
    h1
        margin 0
        text-align: center
        font-size: 55px; 
        font-family: 'Roboto'
        font-weight: 300
    p
        margin-top: 25px
        text-align: center
        font-size: 20px; 
        font-family: 'Roboto'
        font-weight: 100
        color: #888888
    .wrapper-templates
        margin: 100px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        .template
            max-width: 300px;
            height: auto;
            margin: 15px;
            position: relative;
            transition: opacity 0.4s;
            cursor: pointer
            box-shadow: 20px 20px 40px 0 rgba(0,0,0,0.12);
            .templateImage
                opacity: 1
                width: 100%
                height 100%
            .templateText
                position: absolute;
                width: 100%
                height 100%
                top: 0;
                left: 0;
                display: flex;
                align-items: center;
                justify-content: center;
                flex-direction: column;
                padding-left: 8px;
                padding-right: 8px;
                background-color: #fff;
                color: #888;
                opacity: 0;
                transition: all .8s ease-in-out;
                .templateTitle
                    font-family: 'Roboto'
                    font-weight: bold
        .template:hover
            .templateImage
                opacity: 0
            .templateText
                opacity 1
.technologes
    padding 150px 50px
    .wrapper-info-text
        display: flex
        align-items: center
        @media screen and (max-width 900px)
            flex-wrap: wrap
        .info-text
            .info
                display: flex
                @media screen and (max-width 900px)
                    flex-direction: row-reverse;
                .wrap-text
                    margin-right: 15px
                    h3
                        font-family: 'Roboto'
                        font-weight: 300
                        font-size: 25px
                        margin 0
                        text-align: right
                        @media screen and (max-width 900px)
                            text-align: center
                    p
                        font-family: 'Roboto'
                        font-size: 20px
                        font-weight: 100
                        text-align: right
                        color: #888888
                        @media screen and (max-width 900px)
                            text-align: center
                i
                    color #119df7
                    font-size: 35px
        img
            max-width: 500px
            height 250px
            @media screen and (max-width 900px)
                display: none
